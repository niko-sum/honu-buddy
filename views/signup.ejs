<%- include('partials/header') -%>

<main class="container mx-auto mt-5">
  <div class="row justify-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> 
        <% messages.errors.forEach(el => { %>
          <div class="alert alert-danger flex mx-auto w-1/2 "><%= el.msg %></div>
        <% }) %> 
      <% } %> 
      <% if (locals.messages.info) { %> 
        <% messages.info.forEach(el => { %>
          <div class="alert alert-info flex mx-auto w-1/2 "><%= el.msg %></div>
        <% }) %> 
      <% } %>
      <form action="/signup" method="POST">
        <label class="input input-bordered flex justify-center  items-center mx-auto gap-2 mb-4 w-1/2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
            <path
              d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
          </svg>
          <input type="email" name="email" class="grow" placeholder="Email" />
        </label>
        <label class="input input-bordered flex items-center gap-2 mb-4 mx-auto w-1/2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
          </svg>
          <input type="text" name="username" class="grow" placeholder="Username" />
        </label>
        <label class="input input-bordered flex items-center gap-2 mb-4 mx-auto w-1/2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              fill-rule="evenodd"
              d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
              clip-rule="evenodd" />
          </svg>
          <input type="password" name="password" class="grow" placeholder="Password" />
        </label>
        <label class="input input-bordered flex items-center gap-2 mb-4 mx-auto w-1/2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              fill-rule="evenodd"
              d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
              clip-rule="evenodd" />
          </svg>
          <input type="password" name="confirm_password" class="grow" placeholder="Confirm Password" />
        </label>
        <button type="submit" class="btn btn-primary flex mx-auto w-1/2 mt-6 mb-6">Submit</button>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>